{
    "presets":[ 
        "@babel/preset-env",
        "@babel/preset-react",
        "@babel/preset-flow"
    ],
    "plugins": [
        ["module-resolver", {
            "root": ["./src"]
        }],
        ["babel-plugin-styled-components", {
            "displayName": false,
            "minify": false
        }],
        "react-hot-loader/babel",
        "@babel/plugin-proposal-class-properties",
        "@babel/plugin-proposal-export-default-from",
        "@babel/plugin-proposal-object-rest-spread"
    ]
}